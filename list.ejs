<%- include("header") -%>



  <div class="box" id="heading">

    <h1> <%= listTitle %> </h1>

  </div>



  <div class="box">



  <%  newListItems.forEach(function(item){ %>

    <form  action="/delete"  method="post">

      <div class="item">

        <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()"> <!--here onChange="this.form.submit" refers to the if checkbox is changed i.e on or off then it will  make post request to the delete route-->

        <p><%= item.name  %></p>

      </div>

      <input type="hidden" name="listname" value=<%= listTitle %>></input> <!-- here input type="hidden" is user cannot modify the data when submitted  -->

    </form>

    <%  }) %>







      <form class="item" action="/" method="post">

        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">

        <button type="submit" name="list" value=<%= listTitle %>>+</button>

      </form>

  </div>



<%- include("footer") -%>